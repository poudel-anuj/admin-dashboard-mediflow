@section scripts {

    <script>
        $('document').ready(function () {
            GetCategoryList();
            $('#btnUpdate').hide();
        });


        function InsertCat() {
            if ($('#categoryNames').val() === '') {
                toastr.error("Category Name required");
                return false;
            }
            if ($('#status').val() === '10' || $('#status').val() === 10) {
                toastr.error("Category status required");
                return false;
            }
            else {
                var data = {
                    categoryName: $('#categoryNames').val(),
                    status: $('#status').val(),
                }

                $.ajax({
                    url: '/Category/Insert',
                    method: 'post',
                    dataType: 'json',
                    data: data,
                    success: function (data) {
                       
                        if (data === "Success") {

                            GetCategoryList();
                            reset();
                            toastr.success("Category Added");
                        }
                        else {
                            toastr.error(data);
                        }
                    },
                    error: function () {
                        toastr.error("Unable to insert data");
                    }

                });
            }
        }

        function GetCategoryList() {
          
            $.ajax({
                url: '/Category/GetCategoryList',
                method: 'get',
                dataType: 'json',
                success: function (data) {
                    var cs = '';
                    var i = 1;
                    $.each(data, function (key, item) {
                       
                        cs += '<tr>'
                        cs += '<td>' + i + '</td>';
                        cs += '<td>' + item.categoryName + '</td>';
                        cs += '<td>' + item.status + '</td>';
                        cs += '<td><button class="btn btn-info" data-toggle="modal" data-target="#myModal"  onclick="GetCategoryById(' + item.id + ');">Edit</button> <button class="btn btn-danger" data-toggle="modal" data-target="#deletemodal" onclick="GetDeleteFromModal(' + item.id + ');">Delete</button></td></tr>';
                        i++;
                        console.log('item.status');
                    });
                    $('#getcategorylist').html(cs);
                },
                error: function () {
                    toastr.error("Unable to retrive data");
                }
            });
        }

        function Delete() {
            var data = {
                id: $('#ids').val()
            }
            $.ajax({
                url: '/Category/Delete',
                method: 'post',
                dataType: 'json',
                data: data,
                success: function (data) {
                    if (data == "Sucess") {
                        toastr.success(data);
                        GetCategoryList();
                    }
                    else {
                        toastr.error(data);
                    }
                },
                error: function (data) {
                    toastr.error("Unable to delete");
                }
            });
        }

        function GetDeleteFromModal(id) {
            $.ajax({
                url: '/Category/DeleteFromMoadl?id=' + id,
                method: 'get',
                dataType: 'json',
                success: function (data) {
                    $('#ids').val(data.id);
                    GetPostList();
                },
                error: function (data) {
                    toastr.error(data);
                }
            });
        }

        function GetCategoryById(id) {
            $.ajax({
                url: '/Category/GetById?id=' + id,
                method: 'get',
                dataType: 'json',
                success: function (data) {
                    
                    console.log('data list', data);
                    $('#btnSubmit').show();
                    $('#btnUpdate').hide();
                    $('#catName').val(data.categoryName);
                    $('#statuss').val(data.status == true ? '0' : '1').change();

                    $('#id').val(data.id);
                },
                error: function (data) {
                    toastr.error(data);
                }
            });
        }

        
        function UpdateCategory() {
            if ($('#categoryName').val() === '') {
                toastr.error("Category Name required");
                return false;
            }

            else if ($('#statuss').val() === '10' || $('#statuss').val() === 10) {
                toastr.error("Choose category");
                return false;
            }
               
            else {
                var data = {
                    categoryName: $('#catName').val(),
                    status: $('#statuss').val(),
                    id: $('#id').val(),
                }
                debugger;
                $.ajax({
                    url: '/Category/Edit',
                    method: 'post',
                    dataType: 'json',
                    data: data,
                    success: function (data) {
                        toastr.success("sucess");
                        $('#btnSubmit').show();
                        $('#btnUpdate').hide();
                        GetCategoryList();
                        reset();

                    },
                    error: function (data) {
                        toastr.error("Unable to update");
                    }
                });
            }
        }

        function reset() {
            $('#categoryNames').val("");
            $('#status').val("10").change();
        }

    </script>
}
